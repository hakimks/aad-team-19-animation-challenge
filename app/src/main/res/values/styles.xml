<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Title.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OkButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="OkButton.Dark">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="InsetLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">24dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">24dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="LeftHighlight">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@drawable/divider_left</item>

        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_marginTop">-5dp</item>
    </style>

</resources>
